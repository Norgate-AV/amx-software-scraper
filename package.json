{
    "name": "amx-software-scraper",
    "displayName": "amx-software-scraper",
    "description": "Simple CLI tool to scrape software from AMX website",
    "version": "1.0.0",
    "license": "MIT",
    "main": "./dist/app.js",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/Norgate-AV/amx-software-scraper.git"
    },
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "commit": "git-cz",
        "clean": "rimraf dist",
        "lint": "tsc --noEmit",
        "pretty:fix": "prettier --write .",
        "prebuild": "pnpm clean",
        "build": "tsup",
        "prestart": "pnpm lint && pnpm build",
        "start": "cross-env NODE_ENV=production node dist/app.js",
        "dev": "nodemon --exec vite-node src/app.ts",
        "prepare": "husky"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@types/config": "^3.3.1",
        "@types/node": "^22.10.10",
        "@types/nodemon": "^1.19.1",
        "commitizen": "^4.3.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^9.0.7",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "rimraf": "^6.0.1",
        "terser": "^5.20.0",
        "ts-node": "^10.7.0",
        "tsup": "^8.0.1",
        "typescript": "^5.2.2",
        "vite-node": "^3.0.4"
    },
    "dependencies": {
        "axios": "^1.6.7",
        "cheerio": "1.0.0",
        "config": "^3.3.9",
        "dotenv": "^16.3.1",
        "envalid": "^8.0.0"
    }
}
